VERSION=@VERSION@

prefix=/usr/local
bindir=$(prefix)/bin
libdir=$(prefix)/lib
sharedir=$(prefix)/share
INSTALL=install
MAKE=make

targets:
	sed -e "s:@VERSION@:$(VERSION):g" \
		-e "s:@LIBDIR@:$(libdir):g" \
		-e "s:@SHAREDIR@:$(sharedir):g" \
		lblmail.in > lblmail

install:
	$(INSTALL) -m 755 lblmail $(DESTDIR)$(bindir)/lblmail

clean:
	rm -f lblmail
