VERSION=

prefix=
bindir=
libdir=
sharedir=
INSTALL=
MAKE=

targets:
	sed -e "s:@VERSION@:$(VERSION):g" \
		-e "s:@LIBDIR@:$(libdir):g" \
		-e "s:@SHAREDIR@:$(sharedir):g" \
		lblmailrc.example.in > lblmailrc.example

install:
	$(INSTALL) -m 644 lblmailrc.example $(DESTDIR)$(sharedir)/lblmailrc.example

clean:
	rm -f lblmailrc.example
