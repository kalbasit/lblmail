VERSION=@VERSION@

prefix=/usr/local
bindir=$(prefix)/bin
libdir=$(prefix)/lib
sharedir=$(prefix)/share
INSTALL=install
MAKE=make

targets:
	sed -e "s:@VERSION@:$(VERSION):g" \
		-e "s:@LIBDIR@:$(libdir):g" \
		-e "s:@SHAREDIR@:$(sharedir):g" \
		lblmail.php.in > lblmail.php
	sed -e "s:@VERSION@:$(VERSION):g" \
		-e "s:@LIBDIR@:$(libdir):g" \
		-e "s:@SHAREDIR@:$(sharedir):g" \
		MailEditor.class.php.in > MailEditor.class.php

install:
	$(INSTALL) -m 644 lblmail.php $(DESTDIR)$(libdir)/lblmail/lblmail.php
	$(INSTALL) -m 644 MailEditor.class.php $(DESTDIR)$(libdir)/lblmail/MailEditor.class.php

clean:
	rm -f lblmail.php
	rm -f MailEditor.class.php
